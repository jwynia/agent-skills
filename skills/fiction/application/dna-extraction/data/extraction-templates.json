  "medium_specific_guidance": {
    "film": {
      "structure_notes": "Three-act structure common, look for midpoint shift",
      "character_notes": "Limited cast, clear protagonist, compressed arcs",
      "tone_notes": "Consistent tone throughout, genre usually clear",
      "special_considerations": [
        "Visual storytelling functions (what's shown vs. told)",
        "Pacing compressed compared to novels",
        "Music/sound as emotional function"
      ]
    },
    "television_episodic": {
      "structure_notes": "Episode-level A/B plots, season-level arcs",
      "character_notes": "Larger ensemble, slower character development",
      "tone_notes": "May shift between episodes, find baseline",
      "special_considerations": [
        "Case-of-the-week vs. serialized structure",
        "Character consistency across writers",
        "Bottle episodes as character deep-dives"
      ]
    },
    "television_serialized": {
      "structure_notes": "Long-form narrative, season as act",
      "character_notes": "Extended arcs, major character changes possible",
      "tone_notes": "Tonal evolution over seasons common",
      "special_considerations": [
        "Setup/payoff across seasons",
        "Character evolution vs. consistency",
        "Genre may shift between seasons"
      ]
    },
    "novel": {
      "structure_notes": "Variable structure, may not follow three-act",
      "character_notes": "Internal access, POV shapes understanding",
      "tone_notes": "Narrative voice is major tonal element",
      "special_considerations": [
        "POV as structural choice",
        "Prose style as tone carrier",
        "Pacing can vary dramatically"
      ]
    },
    "stage_play": {
      "structure_notes": "Act structure varies, scene-based",
      "character_notes": "Dialogue-forward, limited internal access",
      "tone_notes": "Performance interprets tone, script suggests",
      "special_considerations": [
        "Soliloquy as internal access device",
        "Stage directions as authorial intent",
        "Single location constraints common"
      ]
    },
    "video_game": {
      "structure_notes": "Player agency affects structure",
      "character_notes": "Player character may be blank slate",
      "tone_notes": "Gameplay tone vs. narrative tone",
      "special_considerations": [
        "Ludonarrative consonance/dissonance",
        "Player as protagonist vs. observer",
        "Emergent narrative vs. authored narrative"
      ]
    }
  },

