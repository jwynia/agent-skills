  "_meta": {
    "description": "Templates for DNA extraction at different depth levels",
    "usage": "Select appropriate template based on extraction goal and available time"
  },

  "depth_levels": {
    "quick": {
      "description": "Fast extraction for exploration and comparison",
      "time_estimate": "15-30 minutes per work",
      "use_cases": [
        "Comparing multiple works to find best adaptation source",
        "Quick feasibility check for adaptation idea",
        "Building initial trope cluster from multiple sources"
      ],
      "required_sections": [
        "emotional_core",
        "primary_characters",
        "core_structural_requirements"
      ],
      "optional_sections": [],
      "depth_guidance": {
        "characters": "Main 3-5 only, primary function per character",
        "plot": "Core structure only, no scene-level detail",
        "tone": "Baseline only, no shift mapping",
        "relationships": "Key dynamics only"
      }
    },
    "standard": {
      "description": "Full extraction for most adaptation projects",
      "time_estimate": "1-3 hours per work",
      "use_cases": [
        "Serious adaptation project",
        "Creating reusable trope map",
        "Understanding what makes a beloved work function"
      ],
      "required_sections": [
        "emotional_core",
        "tone",
        "characters",
        "plot_structures",
        "relationships",
        "structural_requirements",
        "adaptable_elements"
      ],
      "optional_sections": [
        "episode_structures",
        "dialogue_patterns"
      ],
      "depth_guidance": {
        "characters": "All significant characters, full six-axis extraction",
        "plot": "Major plot structures and turning points",
        "tone": "Full tonal profile with shift triggers",
        "relationships": "All significant character pairings"
      }
    },
    "detailed": {
      "description": "Deep extraction for serious long-form adaptation",
      "time_estimate": "4-8 hours per work",
      "use_cases": [
        "Adaptation that must capture original's exact feel",
        "Academic analysis",
        "Creating definitive trope reference"
      ],
      "required_sections": [
        "emotional_core",
        "tone",
        "characters",
        "plot_structures",
        "relationships",
        "structural_requirements",
        "adaptable_elements",
        "episode_structures",
        "dialogue_patterns",
        "scene_functions"
      ],
      "optional_sections": [],
      "depth_guidance": {
        "characters": "All characters including minor, full extraction plus voice patterns",
        "plot": "Scene-level function mapping",
        "tone": "Episode-by-episode tonal tracking",
        "relationships": "All pairings plus evolution over time"
      }
    }
  },

